
@{
    ViewBag.Title = "Index";
   
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title></title>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <link href="~/Content/lb.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
    <script src="~/Scripts/indexJs.js"></script>
    <script src="~/Scripts/lb.js"></script>
    <script src="~/Scripts/loading.js"></script>
    <script src="~/Scripts/underscore.js"></script>
    <script src="~/Scripts/CookieJS.js"></script>
</head>
<body>
    <div id="BodyBox">
        
        <div id="Box_conter_nav">
            <div class="body_center_nav">
                <ul class="flaot1">
                    <li class="tb_box" onmouseout="onout()" onmouseover="onover()">
                        <a href="#" class="txt2"><b>商品分类</b></a>
                        <div class="bom_nav">
                            <ul>
                                @for (int i = 0; i < 9; i++)
                                {
                                    <li><a href="/index/Categet?id=@ViewBag.li[i].CateID">@ViewBag.li[i].CateName </a></li>
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="index_li tet_nav"><a href="#">首页</a></li>
                    @foreach (var item in ViewData["messages"] as List<G2_MVC_EF.Models.Brand>)
                    {
                        <li class="tet_nav"><a href="/index/Categet?id=@item.Bid">@item.Bname</a></li>

                    }
                </ul>


            </div>
            <div class="lb-box" id="lb-1">
                <!-- 轮播内容 -->
                <div class="lb-content">
                    <div class="lb-item active">
                        <a href="#">
                            <img src="/images/lunbopic1.jpg" alt="picture loss">
                            <span>[骆驼]凉鞋狂欢周</span>
                        </a>
                    </div>
                    <div class="lb-item">
                        <a href="#">
                            <img src="/images/lunbopic2.jpg" alt="picture loss">
                            <span>[爱步]男鞋</span>
                        </a>
                    </div>
                    <div class="lb-item">
                        <a href="#">
                            <img src="/images/lunbopic3.jpg" alt="picture loss">
                            <span>[DICKIES]男鞋</span>
                        </a>
                    </div>
                    <div class="lb-item">
                        <a href="#">
                            <img src="/images/lunbopic4.jpg" alt="picture loss">
                            <span>[金利来]鞋靴</span>
                        </a>
                    </div>
                </div>
                <!-- 轮播标志 -->
                <ol class="lb-sign">
                    <li class="active">1</li>
                    <li>2</li>
                    <li>3</li>
                    <li>4</li>
                </ol>
                <!-- 轮播控件 -->
                <div class="lb-ctrl left">＜</div>
                <div class="lb-ctrl right">＞</div>
            </div>
        </div>
        <div class="div_center"><h1>“ 好鞋推荐 ”</h1></div>
        <div id="Box_body_td">
            @foreach (var item in ViewData["td"] as List<G2_MVC_EF.Models.Commodity>)
        {
          <div class="tdbox">
                <a href="/index/shangpxq?id=@item.ComId">
                    <dl>
                        <dt>
                            <img class="samLazyImg" src="/images/Loadging.gif" data-src="/images/@item.CpicUrl1" alt="" />

                        </dt>
                        <dd class="index_text">@item.CName</dd>
                        
                        <dd class="index_pirce">￥@item.Cprice.ToString().Split('.')[0]</dd>
                    </dl>
                </a>
            </div>
        }
           
        </div>

        </div>
    <script>
        window.onload = function () {
            // 轮播选项
            const options = {
                id: 'lb-1',              // 轮播盒ID
                speed: 600,              // 轮播速度(ms)
                delay: 3000,             // 轮播延迟(ms)
                direction: 'left',       // 图片滑动方向
                moniterKeyEvent: true,   // 是否监听键盘事件
                moniterTouchEvent: true  // 是否监听屏幕滑动事件
            }
            const lb = new Lb(options);
            lb.start();
        }
    </script>
    
</body>
</html>